<!-- baisen wang-->
<%- include partials/header.ejs %>

<!-- big picture head-->
<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <h1 class="header center teal-text text-lighten-5 " ><%= title%></h1>
            <div class="row center">
                <h5 class="white-text header col s12 light" style="color:black;"><%= message%></h5>
            </div>
            <div class="row center">
                <a href="#summary" class="btn-large waves-effect waves-light teal lighten-1">What did I do?</a>
            </div>
            <br><br>

        </div>
    </div>
    <div class="parallax"><img src="/images/background3.jpg" alt="Unsplashed background img 1"></div>
</div>

<!--content-->
<div class="container">
    <div class="section">
        <div id="summary" class="row">
            <div class="col s12 m12">
                <div class="icon-block">
                    <h2 id="start"class="center brown-text"><a href="#"><i class="material-icons">home</i></a></h2>
                    <h5 class="center">Projects List</h5>
                </div>
            </div>
            <div class="col s12 m12">
                <!--Load data from database-->
                <% for (var i = 0; i < projects.length; i++) { %>
                <div class="col s12 m3">
                    <div class="icon-block">
                        <h5 class="center"><%= projects[i].title%></h5>
                        <p class="light"><%= projects[i].content%></p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include partials/footer.ejs %>